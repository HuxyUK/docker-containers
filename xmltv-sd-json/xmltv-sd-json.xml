<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Beta>False</Beta>
  <Category>Media Applications:</Category>
  <Name>XMLTV Schedules Direct</Name>
  <Overview>Provides XMLTV installation with a JSON schedules direct script installed.</Overview>
  <license>MIT</license>
  <Project>https://sourceforge.net/projects/xmltv/</Project>
  <Support>https://sourceforge.net/projects/xmltv/</Support>
  <Description>
    Eeek!.[br][br]
    [b][span style='color: #E80000;']Directions:[/span][/b][br]
    [b]/config[/b] : in this path, Home Assistant will store it's configuration files.
  </Description>
  <GitHub>github.com/HuxyUK/docker-containers/xmltv-sd-json</GitHub>
  <Repository>huxy/docker-xmltv-sd-json</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment/>
  <Networking>
    <Mode>host</Mode>
    <Publish />
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/xmltv-sd-json</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user</HostDir>
      <ContainerDir>/unraid</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/TVGuide</HostDir>
      <ContainerDir>/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Version>1</Version>
  <Banner>https://raw.githubusercontent.com/balloob/unraid-docker-templates/master/balloob/home-assistant-banner.png</Banner>
  <Icon>https://raw.githubusercontent.com/balloob/unraid-docker-templates/master/balloob/home-assistant-icon.png</Icon>
  <Config Name="Path 1" Target="/data" Default="/mnt/cache/appdata/data/" Mode="rw" Description="Container Path: /data" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/TVGuide</Config>
  <Config Name="unRAID Share Path" Target="/unraid" Default="/mnt/user" Mode="rw" Description="Container Path: /unraid" Type="Path" Display="hidden" Required="false" Mask="false">/mnt/user</Config>
  <Config Name="AppData Config Path" Target="/config" Default="/mnt/cache/appdata/xmltv-sd-json" Mode="rw" Description="Container Path: /config" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/cache/appdata/xmltv-sd-json</Config>
</Container>

